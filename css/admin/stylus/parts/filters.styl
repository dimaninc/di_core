.filter-block
	font-family $classicFont
	color black
	font-size 12px
	background-color white
	padding 0 0 10px 24px
	border-bottom 1px solid #CCCCCC
	margin-bottom 20px
	@media screen and (max-width: 767px)
		padding-left 12px
		padding-right 5px
	.buttons
		display flex
		flex-wrap wrap
		padding 10px 0 0 0
		margin-left 150px
		@media screen and (max-width: 767px)
			margin-left 0
		> *
			vertical-align top
			margin 0 10px 10px 0
	.row
		display flex
		padding-bottom 7px
		@media screen and (max-width: 767px)
			flex-wrap wrap
		> b
			display block
			padding-top 5px
			width 150px
			font-weight normal
			@media screen and (max-width: 767px)
				width 100%
				font-weight bold
		select + select
			margin-left 10px
		select + button
			margin-left 10px
		input
			@media screen and (max-width: 767px)
				flex 1
				min-width 0
		.date-sep
			align-self flex-end
	button
		body[data-skin="entrine"] &
			display inline-flex
			justify-content space-between
			align-items center
			width $entrineBaseWidth
			height $entrineBaseHeight
			text-transform uppercase
			text-align left
			padding-left 18px
			border 3px solid $entrineColorBgDark
			border-radius 0
			color $entrineColorBgDark
			margin 0 20px 20px 0
			background none
			&[type="submit"]
				border-color #90e273
				&:after
					content ''
					width 24px
					height 24px
					background-image embedurl('../../../i/admin/skin/entrine/filter/apply.svg', 'utf8')
					background-repeat no-repeat
			&[data-purpose="reset"]
				border-color #6ea3bf
				&:after
					content ''
					width 24px
					height 24px
					background-image embedurl('../../../i/admin/skin/entrine/filter/reset.svg', 'utf8')
					background-repeat no-repeat
		&[name="export"]
			margin-left 30px
	[data-purpose="reset-filter"]
		display inline-block
		cursor pointer
		position relative
		margin-left 10px
		border-radius 50%
		flex 0 1 auto
		width 20px
		height @width
		background-color #bbb
		transition background-color .5s ease
		align-self center
		@media screen and (max-width: 767px)
			margin-left 5px
		&:hover
			background-color #777
		&:after
			content '+'
			position absolute
			display inline-block
			color white
			transform rotate(45deg)
			left 0
			top 0
			right 0
			bottom 0
			text-align center
			line-height 20px
	.upload-area
		display inline-block
		border-radius 8px
		background red
		position relative
		cursor pointer
		.caption
			color white
			line-height 26px
			background none
			margin 0
			padding 0 15px
			border-bottom 0
	.progress-box
		display inline-block
		.wrapper
			padding-left 40px
			background url(/_core/i/ani/loading.gif) left center no-repeat
		.name
			width 200px
			white-space nowrap
			text-overflow ellipsis
			overflow hidden
			line-height 16px
		.size
			line-height 16px
			float left
			margin-right 10px
			background #eee
			border-radius 5px
			padding 5px

.export-block
	padding-top 15px
	textarea
		width 90%
		height 150px

.filter-caption
	font-weight bold
	font-size 12px
	background #EDF0F4
	border-radius 10px
	padding 10px
	text-align center
	margin 0 0 10px 0

ul.filters-of-cat
	ul-norm()
	> li
		float left
		margin 0 20px 0 0
		padding 0

@keyframes progress-bar-stripes
	from
		background-position 40px 0
	to
		background-position 0 0

.progress
	overflow hidden
	height 20px
	margin-bottom 20px
	background-color #f5f5f5
	border-radius 4px
	box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)

.progress-bar
	float left
	width 0
	height 100%
	font-size 12px
	color white
	text-align center
	background-color #428bca
	box-shadow inset 0 -1px 0 rgba(0, 0, 0, 0.15)
	transition width 0.6s ease
	.progress.active &
		animation progress-bar-stripes 2s linear infinite

.progress-striped
	.progress-bar
		background-image linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent)
		background-size 40px 40px
	.progress-bar-success
		background-image linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent)
	.progress-bar-info
		background-image linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent)
	.progress-bar-warning
		background-image linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent)
	.progress-bar-danger
		background-image linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent)

.progress-bar-success
	background-color #5cb85c

.progress-bar-info
	background-color #5bc0de

.progress-bar-warning
	background-color #f0ad4e

.progress-bar-danger
	background-color #d9534f
