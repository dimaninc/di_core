.dynamic-add {
  --margin-v 10px

  cursor pointer

  &:not(:first-child) {
    margin-top var(--margin-v)
  }

  &:not(:last-child) {
    margin-bottom var(--margin-v)
  }

  {$entrineSkin} & {
  --margin-v 20px
  }
}

.dynamic-row {
  --line-gap 15px
  transition background-color .3s ease

  .close {
    margin 0 10px 10px 10px
  }
  {$classicSkin} & {
    border 1px solid #aaa
    border-radius 10px
    padding 10px

    &:hover {
      background-color #ffe
    }
  }
  {$entrineSkin} & {
    border-width 3px
    padding-bottom 20px
    @media $mqTablet {
      padding-bottom 10px
    }
  }
  + .dynamic-row {
    {$classicSkin} & {
      margin-top 10px
    }
    {$entrineSkin} & {
      padding-top 20px
      border-top 3px solid var(--menu-text-color-hover)
      @media $mqTablet {
       padding-top 10px
      }
    }
  }
  &.ui-sortable-helper
  &.di-sortable-helper {
    background-color #fea
    cursor move

    .existing-pic-holder {
      img {
        max-height 50px
        width auto
      }
    }
  }

  div.m {
    margin 10px 0
    display flex
  }

  .remove {
    float right
  }

  .diaf_clear {
    clear right
  }

  ul.line {
    display flex
    gap var(--line-gap)
    flex-wrap wrap
    align-items flex-start
    margin 0
    padding 0
    list-style none
    {$classicSkin} & {
      margin-right 25px
    }
    &.line--v-center {
      align-items center !important
    }
    & + ul.line {
      margin-top 8px !important
    }
    > li {
      display flex
      align-items center
      {$classicSkin} & {
        margin 5px 0
        > * {
          margin-left 5px
        }
      }
      input:not([type="checkbox"]):not([type="radio"]):not([type="file"]):not([size])
      textarea {
        width 300px
        @media $mqPhone {
          width calc(80vw - 50px)
        }
      }
      code {
        display block
        white-space pre
        color black
        padding 5px
        border 1px solid darkgray
      }
      &.as-column {
        flex-direction column
        align-items flex-start
      }
      &.wider {
        input:not([type="checkbox"]):not([type="radio"]):not([type="file"]):not([size])
        textarea {
          width 500px
          background yellow
          @media screen and (max-width: 1150px) {
            width calc(80vw - 230px)
          }
          @media $mqTablet {
            width calc(80vw - 50px)
          }
        }
      }
      &.wide {
        input:not([type="checkbox"]):not([type="radio"]):not([type="file"]):not([size])
        textarea {
          width 750px
          @media screen and (max-width: 1150px) {
            width calc(80vw - 230px)
          }
          @media $mqTablet {
            width calc(80vw - 50px)
          }
        }
      }
      &.full-width {
        display block
        flex 1
        input:not([type="checkbox"]):not([type="radio"]):not([type="file"]):not([size])
        textarea {
          width 90%
        }
      }
      &.pic-line {
        align-items flex-start
      }
      &:not(.full-width) {
        input:not([type="checkbox"]):not([type="radio"]):not([type="file"])[size],textarea[cols] {
          width auto
        }
      }
      .existing-pic-holder {
        margin-bottom 0
      }
      .hidden {
        display none
      }
      .didynamic-checkboxes
      .didynamic-static-checkboxes {
        cursor pointer

        > span {
          border-bottom 1px dotted
        }
      }
    }
  }
}
