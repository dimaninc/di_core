.diadminform-row
    position relative
    border 1px solid #CFCFCF
    border-radius 8px
    background-color #FAFAFA
    margin 0 20px 3px 20px
    padding 8px 20px
    min-height 18px
    clearing-after()
    body[data-skin="entrine"] &
        border 0
        border-radius 0
        background-color transparent
        margin-bottom 20px
        padding 0
    &:nth-of-type(odd)
        @media screen and (max-width: 767px)
            background #eee
    @media screen and (max-width: 767px)
        margin-left 0
        margin-right 0
        margin-bottom 0
        border-radius 0
        border-left 0
        border-right 0
        border-bottom 0
        display block
        padding-left 5px
    &:last-of-type
        @media screen and (max-width: 767px)
            border-bottom 1px solid #CFCFCF
    .title
    .value
        font-family Verdana, sans-serif
        font-size 12px
        vertical-align top
    .title
        float left
        display block
        width 220px
        padding 3px 10px 0 0
        box-sizing border-box
        body[data-skin="entrine"] &
            width 140px
            text-align right
            position relative
            padding-top 18px
        @media screen and (max-width: 767px)
            float none
            width auto
            padding-left 7px
            padding-bottom 7px
            font-weight bolder
    .value
        margin 0 0 0 225px
        display flex
        body[data-skin="entrine"] &
            margin-left 145px
        @media screen and (max-width: 767px)
            width auto
            margin-left 7px
        input
        textarea
            flex 1
        &.ui-sortable
            .ui-state-highlight
                min-height 50px
                margin 0 0 5px 0
                border-radius 10px
            &.sortable-active-container
                .existing-pic-holder
                    img
                        max-height 50px
                        width auto
        .static
            body[data-skin="entrine"] &
                padding-top 18px
                min-height 40px
        .static-text
            padding 10px
            background #ddd
            margin 5px 5px 5px 0
            border-radius 10px
            body[data-skin="entrine"] &
                margin -18px 0 0 0
                border-radius 0
        .wysiwyg
        .textarea
            margin 5px 0
            display flex
            flex 1
        .wysiwyg
            textarea
                //width 99%
                height 450px
        .textarea
            textarea
                width 99%
        .error
            background red
            color white
            padding 5px
            border-radius 5px
            margin-bottom 5px
        select
            max-width 100%
    &[data-type="dynamic"]
        display block
        .title
            width auto
            float none
            padding-bottom 10px
        .value
            margin-left 0
    .tags-grid
        margin-bottom 15px
    .new-tag
        margin 0
        input[type="text"]
            width 100%
    &[data-field="table"]
        .value
            .model-info
                margin-left 20px
                i
                    background red
                    color white
                    display inline-block
                    padding 2px 5px
                    border-radius 5px
                    font-style normal

.admin-form-uploading-area
    background rgba(25, 187, 251, .5)
    padding 15px
    text-align center
    border-radius 8px
    font-size 16px
    position relative
    margin-right 10px
    input[type="file"]
        position absolute
        display block
        opacity 0
        left 0
        top 0
        width 100%
        height 100%
        cursor pointer
    &.is-drag-over
        background #dddddd

.admin-form-uploading-area-preview
    list-style none
    background rgba(251, 248, 87, 0.5)
    padding 10px
    text-align center
    border-radius 8px 8px 0 0
    position relative
    margin-top 10px
    margin-right 10px
    margin-bottom 0
    > li
        display inline-block
        vertical-align top
        margin-left 10px
        margin-right 10px
        > img
            max-width 120px
            max-height 120px

.admin-form-uploading-area-submit
    background rgba(251, 194, 73, .5)
    border-radius 0 0 8px 8px
    position relative
    margin-right 10px
    text-align center
    padding 10px

.diadminform-separator
    margin 10px 24px 10px 24px
    border-top 1px dotted #000

.diadminform_tabs
    > ul
        margin 0 24px 5px 24px
        list-style none
        padding 0
        body[data-skin="entrine"] &
            margin 0 20px
        @media screen and (max-width: 767px)
            margin-left 12px
        li
            display inline-block
            margin 0 5px 5px 0
            body[data-skin="entrine"] &
                margin-right 20px
                margin-bottom 20px
            &:last-child
                margin-right 0
            > a
                display block
                position relative
                padding 8px 10px
                font-size 12px
                font-weight bold
                background-color white
                border 1px solid #cfcfcf
                border-radius 8px
                z-index 5
                box-sizing border-box
                > div
                    vertical-align middle
                    display inline-block
                    width 100%
                body[data-skin="entrine"] &
                    background-color $entrineColorBgLightGray
                    color $entrineColorText
                    border 0
                    border-radius 0
                    font-weight 600
                    text-align center
                    width $entrineMenuWidth
                    height $entrineBaseHeight
                    &:before
                        content ''
                        display inline-block
                        height 100%
                        vertical-align middle
                        margin-right -0.25em
                &:hover
                &.selected
                    background-color #EDF0F4
                    body[data-skin="entrine"] &
                        background-color $entrineColorBgDarker
                        color white

.existing-pic-holder
    display inline-block
    max-width 98%
    border 1px solid #CFCFCF
    padding 10px
    background #fff
    text-align center
    margin-bottom 10px
    margin-right 10px
    border-radius 8px
    .container
        max-width 100%
        display inline-block
        position relative
        margin-bottom 10px
        box-shadow 0 0 6px 0 rgba(0,0,0,.6)
        overflow hidden
        &:not(.no-zoom-feature)
            cursor zoom-in
        > img
            max-width 100%
            height auto
        &.img-full-size
            overflow-x auto
            &:not(.no-zoom-feature)
                cursor zoom-out
            > img
                max-width none
        &.embed
            font-size 0
            line-height 0
            background url(/_core/i/admin/background-for-transparent.gif) center center repeat
        &.text
            font-size 1.5em
            padding .5em 1.5em
    a
        &.link
            display block
            background #eee
            padding 5px 10px
            border-radius 5px 5px 0 0
            border-bottom 1px dotted #999
    .info
        margin 0
        padding 5px 10px
        background #ddd
        &:not(:last-child)
            border-bottom 1px dotted #999
        &:last-child
            border-radius 0 0 5px 5px
        .rotate-block
        .watermark-block
            display inline-block
            margin-left 30px
            > a
                display inline-block
                font-size 24px
                font-weight bold
                padding 0 10px
                box-shadow 0 0 4px rgba(0,0,0,.5)
                &:not(:last-child)
                    margin-right 15px

ul.table-edit-log
    list-style none
    margin 0
    padding 0
    > li
        border-radius 5px
        padding 5px
        box-shadow 0 0 5px rgba(0,0,0,.7)
        &:nth-child(even)
            background-color #eee
        &:not(:last-child)
            margin-bottom 10px
        > .author
            padding 10px
            border-bottom 1px dotted #777
            b
            i
        > table
            width 100%
            border-collapse collapse
            td
                width 33.3%
                padding 5px 10px
                border 1px solid #aaa
                &:nth-child(2)
                    width auto

@-moz-document url-prefix()
    .diadminform-row
        .value
            width 90%
    .existing-pic-holder
        max-width 90%
