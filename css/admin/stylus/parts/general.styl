                margin-right $entrineMenuWidthNarrow1 * 3
            @media screen and (max-width: 1024px)
                margin-right $entrineMenuWidthNarrow2 * 3
            @media screen and (max-width: 767px)
                margin-right 101px
                padding-left 15px
            @media screen and (max-width: 450px)
                margin-left 0
                margin-right 0
                font-size 16px
        @media screen and (max-width: 767px)
            max-width 100%
            margin-right 101px
            ellipsis()
        @media screen and (max-width: 450px)
            position absolute
            z-index 102
            top 30px
            left 50px
            right 101px
            margin-left 0
            margin-right 0
            padding-left 10px
            line-height 40px
            height auto

