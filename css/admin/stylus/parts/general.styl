body
    background white
    margin 0
    padding 0
    font-family $classicFont
    color black
    font-size 11px
    font-weight normal
    &[data-skin="entrine"]
        color $entrineColorText
        font-family $entrineFont

table
    border-collapse collapse
    &.tags-table
        border 0
        border-collapse collapse
        margin 0
        td
            padding-right 20px
            vertical-align top
            border 0
    &.banners_stat
        padding 0
        border-collapse collapse
        width 94%
        margin 20px 3% 0 3%
        td
            border 1px solid #000
            padding 5px
            background #eee
            text-align right
            font-size 14px
            &.b
                text-align left
        tr
            &.n2
                td
                    background #ddd
        th
            border 1px solid #000
            padding 5px
            background #D4D0C8
            text-align center
            font-size 14px
        table
            &.sub_stat
                margin 0
                padding 0
                border-collapse collapse
                width 100%
    &.item-colors-table
        border-collapse collapse
        td
            text-align center
            border 1px solid #ccc
            padding 5px
            margin-right 5px
            label
                cursor pointer
    &.cover_pic_select
        margin 5px 0
        border-collapse collapse
        display none
        td
            vertical-align top
            text-align left
            border 0
            padding 0 20px 10px 0
            .cover-note
                position absolute
                text-align center
                padding-top 10px
        img
            border 4px solid transparent
            padding 5px
            background none
    &.cover_video_select
        img
            padding 0 !important
        a
            &.cover_pic_selected
                img
                    background none !important
                    padding 0 !important
    &.general-data
        margin 0
        padding 0
        td
        th
            border 1px solid #cfcfcf
            padding 5px 10px
        th
            font-weight bold
        thead
            td
                font-weight bold
        tbody
            td
                text-align left
    // todo: why doesn't this work?
    &.cross-highlight
        $highlightColor = #ffc
        overflow hidden
        tr
            &:hover
                td
                th
                    background-color $highlightColor
        tr
            td
            th
                position relative
                outline 0
                &:hover
                    &:before
                        content ''
                        position absolute
                        background-color $highlightColor
                        left 0
                        top -5000px
                        height 10000px
                        width 100%
                        z-index -1

a
    text-decoration none
    color $classicColorLink
    transition .3s
    &:hover
        text-decoration none
        color $classicColorLinkHover
    &.video-tn
        display block
        position absolute
        z-index 99
    &.cover_pic_selected
        img
            border 4px solid #f00
            padding 5px
            background #f77
    &.comments-close
        display block
        position absolute
        border 1px solid #D4D0C8
        background #333
        color #fff
        left 0
        top 0
        z-index 10
        margin-left 1100px
        width 20px
        height 20px
        text-align center
        font-weight bold
        font-size 17px
        &:hover
            background #B4B0A8

p
    margin 9px 0

form
    margin 0

img
    border 0
    &.video
        position absolute
        z-index 98
        margin -4px 0 0 -4px

u
    cursor pointer
    text-decoration underline
    &:hover
        text-decoration none

._up
    text-transform uppercase !important

._lo
    text-transform lowercase !important

.dt
    font-weight normal !important
    font-size 11px !important
    text-align center !important

.lite
    font-weight normal !important
    font-size 11px !important

.bold
    font-weight bold

.italic
    font-style italic

.regular
    font-weight normal !important

.center
    text-align center

.border-rounded
    border-radius 8px

.display-none
    display none !important

.hidden
    visibility hidden !important

.no-padding
    padding 0 !important

.close
    display block
    float right
    margin 5px 5px 0 0
    width 18px
    height 18px
    background url(/_core/i/admin/buttons/close.png) 0 0 no-repeat
    transition none
    body[data-skin="entrine"] &
        background-image embedurl('../../../i/admin/skin/entrine/list/del.svg')
        background-size 18px 18px
        background-position center center
        width 36px
        height 36px
        transition .3s
    &:hover
        background-position 0 -18px
        body[data-skin="entrine"] &
            background-position center center
            background-color $entrineColorTextMenuSelected

.simple-button
    display inline-block
    position relative
    border-radius 3px
    background-color #ddd
    padding 5px 10px
    transition .3s
    &:hover
        background-color #e7e7e7
    body[data-skin="entrine"] &
        border-radius 2px
        color white
        background-color $entrineColorTextMenuSelected
        padding 11px 14px 11px 38px
        &:before
            content ''
            position absolute
            width 12px
            height 12px
            left 12px
            top 50%
            transform translateY(-50%)
            background embedurl('../../../i/admin/skin/entrine/plus.svg')
            background-size cover
        &:hover
            background-color $entrineColorBgDark

.admin-layout
