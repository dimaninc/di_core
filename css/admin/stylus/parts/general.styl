        padding 0 20px
        background #555
        color white
        font-family Arial, Helvetica, sans-serif
        font-size 12px
        width 140px
        position absolute
        top 0
        right 0
        text-align center
        transition background .5s linear, color .5s linear
        box-sizing border-box
        &:hover
            background #777
            color white
        body[data-skin="entrine"] &
