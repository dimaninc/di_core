                line-height 23px
                height 23px
                text-align left
                font-size 13px
                padding-left 5px
        @media screen and (max-width: 767px)
            width 100px
            top 0
            line-height 23px
            height 23px
            padding-top 0
            padding-bottom 0
        span
            display inline-block
            position relative
            body[data-skin="entrine"] &
                &:before
                    content ''
                    position absolute
                    width 18px
                    height 18px
                    left (-14px - @width)
                    top 50%
                    transform translateY(-50%)
                    background embedurl('../../../i/admin/skin/entrine/user.svg')
