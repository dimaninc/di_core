                width $entrineMenuWidthNarrow1
                font-size 14px
            @media screen and (max-width: 1024px)
                width $entrineMenuWidthNarrow2
            @media screen and (max-width: 767px)
                width 100px
                line-height 24px
                height 24px
                padding-left 5px
                font-size 13px
                text-align left
            &:hover
                background $entrineColorBgDarker
            > span
                display inline-block
                height $entrineBaseHeight
        @media screen and (max-width: 767px)
            width 100px
            height 23px
            line-height 23px
            padding 0 5px
            top 48px
        > span
            position relative
        &.go-to-face
            right 141px
            body[data-skin="entrine"] &
                right $entrineMenuWidth
                color $entrineColorTextMenuSelected
                @media screen and (max-width: 1470px)
                    right $entrineMenuWidthNarrow1
                @media screen and (max-width: 1024px)
                    right $entrineMenuWidthNarrow2
                @media screen and (max-width: 767px)
                    right 0
                    color white
            @media screen and (max-width: 767px)
                right 0
                top 24px
            > span
                body[data-skin="entrine"] &
                    @media screen and (max-width: 767px)
                        font-size 12px
                    &:before
                        content ''
                        position absolute
                        width 18px
                        height 18px
                        left (-10px - @width)
                        top 50%
                        transform translateY(-50%)
                        background embedurl('../../../i/admin/skin/entrine/globe.svg')
                        background-size cover
                        @media screen and (max-width: 767px)
                            display none
        &.logout
            > span
                body[data-skin="entrine"] &
                    &:before
                        content ''
                        position absolute
                        width 18px
                        height 18px
                        left (-12px - @width)
                        top 50%
                        transform translateY(-50%)
                        background embedurl('../../../i/admin/skin/entrine/log-out.svg')
                        background-size cover
                        @media screen and (max-width: 767px)
                            display none
