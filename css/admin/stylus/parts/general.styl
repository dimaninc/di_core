    > .site-title
        background #333
        color white
        height $classicBaseHeight
        line-height $classicBaseHeight
        font-size 24px
        font-family Arial, Helvetica, sans-serif
        margin 0 282px 0 200px
        padding-left 20px
        padding-right 10px
