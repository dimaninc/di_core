            display none
            z-index 100
            box-shadow 0 0 10px black
            margin-bottom 0
    &.nav-shown
        > .nav
            @media screen and (max-width: 767px)
                display block
    > .content
        background white
        position relative
        margin-left 201px
        padding-bottom 20px
        body[data-skin="entrine"] &
            margin-left $entrineMenuWidth
            @media screen and (max-width: 767px)
                margin-left 0
        @media screen and (max-width: 767px)
            margin-left 0
        &:after
            content ''
            display block
            clear both
        > .caption
            display flex
            align-items center
            padding-left 20px
            height 40px
            line-height 1.5
            font-family Tahoma, sans-serif
            font-size 12px
            background white
            border-bottom 1px solid #CCCCCC
            margin-bottom 10px
            box-sizing border-box
            body[data-skin="entrine"] &
                font-family $entrineFont
                height $entrineBaseHeight
                background-color $entrineColorBgLightGray
                border-bottom 0
                padding 0 0 0 24px
                margin-bottom 20px
