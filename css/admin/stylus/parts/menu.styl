.above_lm
    background white
    color black
    padding-left 22px
    font-family $classicMenuFont
    font-size 12px
    font-weight bold
    border-bottom 1px solid #CCCCCC
    margin-bottom 0
    text-transform uppercase
    height 40px
    line-height @height
    box-sizing border-box
    body[data-skin="entrine"] &
        font-family $entrineFont
        background $entrineColorBgDark
        color white
        padding-left 27px
        height 71px
        line-height @height
        font-weight 600
        border-bottom 0

ul.left-menu
    ul-norm()
    > li
        > b
            display block
            position relative
            padding 7px 7px 7px 20px
            background-color #edf0f4
            border-bottom 1px solid #cfcfcf
            font bold 12px / 18px $classicMenuFont
            color #444
            cursor pointer
            text-transform uppercase
            box-sizing border-box
            width 199px
            transition .3s
            body[data-skin="entrine"] &
                font-family $entrineFont
                font-weight 600
                border-bottom 0
                background-color $entrineColorBgDark
                color $entrineColorTextMenu
                width auto //$entrineMenuWidth
                padding-left 27px
                padding-right 35px
                &:after
                    content ''
                    position absolute
                    triangle(6px, 8px, 'right', $entrineColorTextMenuSelected)
                    right 20px
                    top 50%
                    margin-top -3px
                    transition .5s
            &:hover
                background-color #dde5e5
                body[data-skin="entrine"] &
                    //background-color $entrineColorBgDarker
                    color $entrineColorTextMenuSelected
        > ul
            ul-norm()
            display none
            border-bottom 1px solid #cfcfcf
            body[data-skin="entrine"] &
                border-bottom 0
            > li
                border-bottom 0 solid #edf0f4
                font normal 11px / 11px Verdana, sans-serif
                color #0059B2
                body[data-skin="entrine"] &
                    font normal 12px / 16px Montserrat, sans-serif
                    color $entrineColorTextMenu
                a
                    text-decoration none
                    color #7600AD
                    display block
                    background #ffffff
                    padding 7px 7px 7px 28px
                    body[data-skin="entrine"] &
                        color $entrineColorTextMenu
                        background $entrineColorBgDarker
                        text-transform uppercase
                        padding-left 34px
                    &:hover
                        color #FF0000
                        background #f7f7f7
                        body[data-skin="entrine"] &
                            color $entrineColorTextMenuSelected
                            background $entrineColorBgDarker
        &[data-state="1"]
            > b
                body[data-skin="entrine"] &
                    //background-color $entrineColorBgDarker
                    //color $entrineColorTextMenuSelected
                    &:after
                        transform rotate(90deg)
        &[data-sub-menu-state="1"]
            > ul
                display block
