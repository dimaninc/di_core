.above_lm
    background white
    color black
    padding 14px 0 14px 22px
    font-family Tahoma, sans-serif
    font-size 12px
    font-weight bold
    border-bottom 1px solid #CCCCCC
    margin-bottom 0
    text-transform uppercase
    body[data-skin="entrine"] &
        background $entrineColorBgDark
        color white
        padding 0 0 0 27px
        line-height 71px
        font-weight 600
        border-bottom 0

ul.left-menu
    ul-norm()
    > li
        > b
            display block
            padding 7px 7px 7px 20px
            background-color #edf0f4
            border-bottom 1px solid #cfcfcf
            font bold 12px / 18px Tahoma, sans-serif
            color #444
            cursor pointer
            text-transform uppercase
            box-sizing border-box
            width 200px
            body[data-skin="entrine"] &
                font-weight 600
                border-bottom 0
                background-color $entrineColorBgDark
                color $entrineColorTextMenu
                width auto //$entrineMenuWidth
                padding-left 27px
            &:hover
                background-color #dde5e5
                body[data-skin="entrine"] &
                    background-color $entrineColorBgDarker
                    color $entrineColorTextMenuSelected
        > ul
            ul-norm()
            display none
            border-bottom 1px solid #cfcfcf
            body[data-skin="entrine"] &
                border-bottom 0
            > li
                border-bottom 0 solid #edf0f4
                font normal 11px / 11px Verdana, sans-serif
                color #0059B2
                ellipsis()
                body[data-skin="entrine"] &
                    font normal 12px / 12px Montserrat, sans-serif
                    color $entrineColorTextMenu
                a
                    text-decoration none
                    color #7600AD
                    display block
                    background #ffffff
                    padding 7px 7px 7px 28px
                    body[data-skin="entrine"] &
                        color $entrineColorTextMenu
                        background $entrineColorBgDarker
                        text-transform uppercase
                        padding-left 34px
                    &:hover
                        color #FF0000
                        background #f7f7f7
                        body[data-skin="entrine"] &
                            color $entrineColorTextMenuSelected
                            background $entrineColorBgDarker
        &[state="1"]
            > b
                body[data-skin="entrine"] &
                    background-color $entrineColorBgDarker
                    color $entrineColorTextMenuSelected
            > ul
                display block
